<body class="color-fondo-body">




<section class="container-profesion">
  <h1 class="titulos">Tipos de Profesion</h1>

  <!-- Button trigger modal -->
  <div class="">
      <button type="button" class="Btn" data-bs-toggle="modal" data-bs-target="#ModalProfesion">  
      <div class="sign">+</div>
      <div class="text">Agregar</div></button>
  </div>


  <!-- Modal -->
  <div class="modal fade" id="ModalProfesion" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="ModalTitulo"></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

          <div class="input-group flex-nowrap">
            <span class="input-group-text" id="addon-wrapping"></span>
            <input type="hidden" id="ProfesionID" value="0">
            <label for="nombreProfesion" class="form-label">Profesion</label>

            <input type="text" class="form-control" id="nombreProfesion" placeholder="Nombre del tipo Profesion">
          </div>

          
          <div class="input-group flex-nowrap">
            <span class="input-group-text" id="addon-wrapping"></span>
            <input type="hidden" id="" value="0">
            <label for="matricula" class="form-label">Matricula</label>

            <input type="text" class="form-control" id="matricula" placeholder="Matricula">
          </div>


        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary"
            data-bs-dismiss="modal" onclick="LimpiarModal()">Cancelar</button>
          <button type="button" class="btn btn-primary"  id="btnGuardar" onclick="GuardarProfesion()">Guardar</button>
        </div>
      </div>
    </div>
  </div>



<div class="tbl-profesion">
<table class="table table-ligth table-striped">
  <thead>
      <tr class="align-bottom">
          <th style="width: 400px;">Nombre</th>
          <th style="width: 400px;">Matricula</th>
          <th style="width: 70px;">Editar</th>
          <th style="width: 70px;">Eliminar</th>
      </tr>
    <tbody id="tbody-Profesion"></tbody>
  </thead>
</table>
</div>

</section>


  @section Scripts {

    <script src="~/js/TiposProfesion.1.0.0.js"></script>
  }






</body>