<body class="color-fondo-body">

  <section class="container-administracion">
    <h1 class="titulos">Provincias</h1>

    <!-- Button trigger modal -->
    <div>
      <button type="button" class="Btn" data-bs-toggle="modal" data-bs-target="#ModalProvincia">
        <div class="sign">+</div>
        <div class="text">Agregar</div>
      </button>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="ModalProvincia" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="ModalTitulo">Nueva Provincia</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form action="">
              <input type="hidden" id="ProvinciaID" value="0">

            <div>
              <label for="nombreProvincia" class="form-label">Nombre de Provincia</label>
              <input type="text" class="form-control" id="nombreProvincia">
            </div>

          </form>
          </div>
          <div class="modal-footer">
            <button type="button" onclick="LimpiarModal();" class="btn btn-secondary"
              data-bs-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-primary" id="btnGuardarProvincia"
              onclick="GuardarProvincia()">Guardar</button>
          </div>
        </div>
      </div>
    </div>







    <div class="tbl-administracion" style="overflow: hidden; border-radius: 20px;">
      <table class="table table-dark table-striped" style="border-radius: 20px; overflow: hidden; width: 100%;">
        <thead>
          <tr>
            <th style="background-color: #241199;">Nombre</th>
            <th style="width: 150px; background-color: #241199;">Editar</th>
            <th style="width: 110px; background-color: #241199;">Eliminar</th>
          </tr>
        </thead>
        <tbody id="tbody-Provincias"></tbody>
      </table>
    </div>

  </section>


  @section Scripts {

    <script src="~/js/Provincia.1.0.0.js"></script>
  }






</body>