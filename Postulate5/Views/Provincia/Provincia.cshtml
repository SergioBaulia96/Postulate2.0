<body class="color-fondo-body">
  






<h2 style="text-align: center; " class=" titulos">Carga de provincias</h2>

<!-- Button trigger modal -->
<div class="mb-2 text-center">
 
    <button type="button" class="btn btn-primary botones" data-bs-toggle="modal" data-bs-target="#ModalProvincia"><i class="fa-light fa-newspaper"></i>Crear Provincia</button>
     <button type="button"    onclick="ListadoProvincia()" class="btn btn-primary botones">
      Cargar 
    </button>
  </div>


